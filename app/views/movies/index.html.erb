<div class="picpal-root fill-page">
  <h2 class="page-title">movies</h2>

  <div class="movies-container">

    <% @movies.each do |m| %>
      <%= link_to movie_path(m.id), class: "opaque" do %>
        <div class="movie-card">
          <img src='<%= m.image_url %>' class="movie-img">
          <span class="movie-info">
            <h6><%= m.name %></h6>
            <h6><%= m.genre %></h6>
          </span>
        </div>
      <% end %>
    <% end %>

  </div>
<br><br>
  <%= link_to new_movie_path do %>
    <button>Add New Movie</button>
  <% end %>

</div>
